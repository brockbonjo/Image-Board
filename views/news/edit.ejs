<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= article.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/news/<%= article._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="article[name]" value = "<%=article.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="article[image]" value = "<%=article.image%>">
                </div>
                <div class='form-group'>
                    <input class="form-control" type="text" name="article[description]" placeholder="<%=article.description%>">
                </div>
                <div class='form-group' value=>
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/news">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>